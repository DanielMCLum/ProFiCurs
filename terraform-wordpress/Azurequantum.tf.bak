terraform {
  required_providers {
    azurerm = {
      source = "hashicorp/azurerm"
      version = "~>3.0"
    }
  }
}

provider "azurerm" {
  alias   = "quantum"
  features {}
}

resource "azurerm_resource_group" "quantum_rg" {
  name     = "QuantumResourceGroup"
  location = "East US"
}
